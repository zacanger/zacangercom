root = true

[*]
end_of_line = LF
charset = utf-8
max_line_length = 160
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

[*.js]
max_line_length = 120

[*.css]
max_line_length = 80

[*.vim]
indent_size = 4
max_line_length = 80

[*.md]
trim_trailing_whitespace = false
max_line_length = 9999

